&GLOBAL
  PROJECT #ABC
  PRINT_LEVEL LOW
  RUN_TYPE BSSE
&END GLOBAL
&FORCE_EVAL
#  STRESS_TENSOR ANALYTICAL
  METHOD QS
  &BSSE
    &FRAGMENT
      LIST #xx..yy
    &END FRAGMENT
    &FRAGMENT
      LIST #zz
    &END FRAGMENT
  &END BSSE
  &DFT
    CHARGE +1
    BASIS_SET_FILE_NAME ./BASIS_MOLOPT
    POTENTIAL_FILE_NAME ./GTH_POTENTIALS
    UKS .FALSE.
  &POISSON
   PERIODIC XYZ
 &END POISSON 
#    MULTIPLICITY 3
    &MGRID
      CUTOFF 300
      NGRIDS 4
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
      EXTRAPOLATION ASPC
      EXTRAPOLATION_ORDER 3
      #MAP_CONSISTENT TRUE
    &END QS
    &SCCS OFF
      ALPHA [N*m^-1] 0.0
      BETA [kbar] 0.0
      GAMMA [mN/m] 0.0
      DELTA_RHO 2.0E-5
      DERIVATIVE_METHOD CD5
      DIELECTRIC_CONSTANT 25.00
      EPS_SCCS 1.0E-8
      EPS_SCF 0.3
      MAX_ITER 1000
      METHOD Andreussi
      MIXING 0.6
      &ANDREUSSI
        RHO_MAX 0.0001
        RHO_MIN 0.00001
      &END ANDREUSSI
      &FATTEBERT-GYGI
        BETA 1.3
        RHO_ZERO 0.0004
      &END FATTEBERT-GYGI
    &END SCCS
    &SCF
      EPS_SCF 3.0E-7
      SCF_GUESS ATOMIC #RESTART #ATOMIC
      MAX_SCF 300
    #  OT OFF
    #    ALGORITHM STRICT #IRAC
    #    PRECONDITIONER FULL_KINETIC
    #    ENERGY_GAP 0.0001
    #    MINIMIZER DIIS
    #    NDIIS 8 #12
    #    STEPSIZE -0.125
    #    LINESEARCH 2PNT
    #  &END OT
      &DIAGONALIZATION 
       ALGORITHM STANDARD 
      &END DIAGONALIZATION 
      &OUTER_SCF
        OPTIMIZER DIIS
        MAX_SCF 300
        EPS_SCF 1.0E-6
      &END OUTER_SCF
      ADDED_MOS 100
      CHOLESKY INVERSE
      &SMEAR ON 
        METHOD FERMI_DIRAC 
        ELECTRONIC_TEMPERATURE [K] 300 
      &END SMEAR
      &MIXING 
        METHOD BROYDEN_MIXING 
        ALPHA 0.1 
        BETA 1.5 
        NBROYDEN 8 
      &END MIXING  
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      DENSITY_CUTOFF     1.0000000000000000E-10
      GRADIENT_CUTOFF    1.0000000000000000E-10
      TAU_CUTOFF         1.0000000000000000E-10
      &XC_GRID
        XC_DERIV SPLINE2_SMOOTH
      &END XC_GRID
      &vdW_POTENTIAL
         DISPERSION_FUNCTIONAL PAIR_POTENTIAL
         &PAIR_POTENTIAL
            TYPE DFTD3
            PARAMETER_FILE_NAME ./dftd3.dat
            REFERENCE_FUNCTIONAL PBE
         &END PAIR_POTENTIAL
      &END vdW_POTENTIAL
    &END XC
    &LOCALIZE FALSE
      METHOD JACOBI
      EPS_LOCALIZATION 1.0E-5
      CRAZY_USE_DIAG FALSE
      OUT_ITER_EACH 100
      USE_HISTORY TRUE
#      STATES ALL
#      LIST 1..4
#      LIST_UNOCCUPIED 1..10
      &PRINT
        &MOLECULAR_DIPOLES OFF
          FILENAME ./WFs/mol
          PERIODIC T
          REFERENCE COAC
          &EACH
            MD 5
          &END EACH
        &END MOLECULAR_DIPOLES
        &TOTAL_DIPOLE OFF
          FILENAME ./WFs/tot
          PERIODIC T
          REFERENCE COAC
          &EACH
            MD 5
          &END EACH
        &END TOTAL_DIPOLE
        &WANNIER_CENTERS ON
          IONS+CENTERS .TRUE.
          FILENAME ./Wan_centers
          &EACH
            __ROOT__ 1
          &END EACH
        &END WANNIER_CENTERS
        &WANNIER_SPREADS OFF
          FILENAME ./Wan_spreads
          &EACH
            __ROOT__ 1
          &END EACH   
        &END WANNIER_SPREADS
        &WANNIER_CUBES OFF
          FILENAME ./Wan_cubes
          &EACH
            __ROOT__ 1
          &END EACH
        &END WANNIER_CUBES
      &END PRINT
    &END LOCALIZE
    &PRINT
      &E_DENSITY_CUBE OFF
        FILENAME ./density
        &EACH
          __ROOT__ 1
        &END EACH
      &END E_DENSITY_CUBE
      &MO_CUBES OFF
        FILENAME ./mo_cubes
        WRITE_CUBE .TRUE.
        NHOMO 4
        NLUMO 1
        &EACH
          __ROOT__ 1
        &END EACH
      &END MO_CUBES
    &END PRINT
  &END DFT
  &SUBSYS
    &CELL
      ABC #A B  C
      ALPHA_BETA_GAMMA # alpha beta gamma
      PERIODIC XYZ
      SYMMETRY #abc
    &END CELL
    &TOPOLOGY
      #CONN_FILE_FORMAT GENERATE
      COORD_FILE_FORMAT XYZ
      COORD_FILE_NAME #abc.xyz
      &GENERATE
        CREATE_MOLECULES FALSE
      &END GENERATE
#      &CENTER_COORDINATES
#      &END CENTER_COORDINATES
      MOL_CHECK FALSE
    &END TOPOLOGY
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND Li
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q3
    &END KIND
    &KIND C
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND N
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND Na
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q9
    &END KIND
    &KIND S
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND P
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND
   &KIND H_ghost
      BASIS_SET DZVP-MOLOPT-SR-GTH
      GHOST
    &END KIND
    &KIND C_ghost
      BASIS_SET DZVP-MOLOPT-SR-GTH
      GHOST
    &END KIND
    &KIND Li_ghost
      BASIS_SET DZVP-MOLOPT-SR-GTH
      GHOST
    &END KIND
    &KIND Na_ghost
      BASIS_SET DZVP-MOLOPT-SR-GTH
      GHOST
    &END KIND
    &KIND O_ghost
      BASIS_SET DZVP-MOLOPT-SR-GTH
      GHOST
    &END KIND
    &KIND S_ghost
      BASIS_SET DZVP-MOLOPT-SR-GTH
      GHOST
    &END KIND
    &KIND P_ghost
      BASIS_SET DZVP-MOLOPT-SR-GTH
      GHOST
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&MOTION
  &CONSTRAINT
   &FIXED_ATOMS
     COMPONENTS_TO_FIX XYZ
     LIST 1..224
   &END FIXED_ATOMS
  &END CONSTRAINT
 &GEO_OPT
   MAX_ITER 1000
   OPTIMIZER BFGS
   TYPE MINIMIZATION
 &END GEO_OPT          
  &CELL_OPT
    MAX_ITER 1000
    OPTIMIZER BFGS
    TYPE DIRECT_CELL_OPT
    EXTERNAL_PRESSURE 1.00000000E-003 1.00000000E-003 1.00000000E-003 1.00000000E-003 1.00000000E+000 1.00000000E-003 1.00000000E-003 1.00000000E-003 1.00000000E-003
    PRESSURE_TOLERANCE 1.0
    KEEP_SYMMETRY .TRUE.
    KEEP_ANGLES   .TRUE. 
    CONSTRAINT XZ
  &END CELL_OPT
  &MD
    ENSEMBLE NVT
    STEPS 20000
    TIMESTEP 1.0
    TEMPERATURE 300
    ANGVEL_TOL 0.0
    ANGVEL_ZERO T
    COMVEL_TOL 0.0
    &THERMOSTAT
      TYPE CSVR
      REGION MASSIVE
      &CSVR
        TIMECON 10.0 #500.0 #together with LOCALIZE
      &END CSVR
    &END
    &PRINT
      &ENERGY
        &EACH
          MD 1
        &END EACH
      &END ENERGY
    &END PRINT
  &END MD
  &PRINT
    &TRAJECTORY
      FORMAT XYZ
      UNIT angstrom
      &EACH
        MD 1
      &END EACH
    &END TRAJECTORY
    &RESTART
      &EACH
        MD 1
      &END EACH
    &END RESTART
  &END PRINT
&END MOTION
#&EXT_RESTART
#  RESTART_DEFAULT TRUE
#  RESTART_FILE_NAME ./thio-1.restart
#&END EXT_RESTART

